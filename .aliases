# Aliases called by either Zsh or Bash dotfiles

# Load files in Atom from command line more quickly:
alias a="atom"


# Git
## Git add all, then commit
alias gac="git add -A && git commit -m"

# Command Shortcuts
## list with more information
alias lst="ls -lsat"

# Variables for Common Paths
PROJ=$HOME/Projects
TEACH=$HOME/Box/Teaching
NOTES=$HOME/Box/Notes
INBOX=$HOME/Box/Inbox

# Directory Jumps
## Switch to projects
alias proj="$PROJ"
alias teach="$TEACH"
alias notes="$NOTES"


# Processes
## Login to server
alias bact="ssh root@bactriana.org"

## Workflow: parse everything in markdown folder
alias md_parse="python ~/Projects/xml_development_eurasia/markdown_parser/markdown_parser_3.0.py"


# Quick App Opens

alias dige="open $NOTES/Digital_Humanities/database_digital_eurasia_6.1.fmp12"
