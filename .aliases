# Aliases called by either Zsh or Bash dotfiles

# Load files in Atom from command line more quickly:
alias a="atom"


# Git
## Git add all, then commit
alias gac="git add -A && git commit -m"

# Command Shortcuts
## list with more information
alias lst="ls -lsat"


# Directory Jumps
## Switch to projects
alias proj="$HOME/Projects"
alias teach="$HOME/Box/Teaching"
alias notes="$HOME/Box/Notes"


